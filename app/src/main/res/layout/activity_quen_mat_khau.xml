<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuenMatKhauActivity">

    <ImageView
        android:src="@drawable/phuongnam"
        android:id="@+id/imageView"
        android:layout_margin="30dp"
        android:layout_width="346dp"
        android:layout_height="84dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pass Cu: "
            android:textSize="30dp" />

        <EditText
            android:id="@+id/edUs"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pass Moi"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/edPass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhap Pass"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/edPass2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="30dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:onClick="btnDoiMK"
            android:id="@+id/btnDoiMK"
            android:text="Doi Mat Khau"
            android:layout_marginLeft="60dp"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:onClick="btnHuyQMK"
            android:id="@+id/btnHuyDMK"
            android:text="Huy"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>